<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tecmosa.Controls"
             xmlns:ResultViews="clr-namespace:Tecmosa.Controls.Results.Views" 
             xmlns:LiveDataViews="clr-namespace:Tecmosa.Controls.LiveData"
             x:Class="Tecmosa.Pages.MainScreen"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="144*"/>
        </Grid.ColumnDefinitions>

        <ResultViews:ResultPage Grid.Column="1" Grid.RowSpan="2"/>
        <LiveDataViews:View Grid.Row="1" Grid.Column="0"/>
    </Grid>
</UserControl>
