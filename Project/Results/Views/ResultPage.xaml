<UserControl x:Class="Tecmosa.Results.ResultPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tecmosa.Results"
             mc:Ignorable="d" 
             Background="LightSteelBlue"
             d:DesignHeight="300" d:DesignWidth="853.125" d:DataContext="{d:DesignData /SampleData/ResultPageViewModelSampleData.xaml}">
    <ItemsControl ItemsSource="{Binding TestPoints}" 
                  ItemTemplate="{StaticResource TestPointListTemplate}"
                  Background="Transparent" Margin="5,5,0,0" 
                  d:DataContext="{Binding Source={StaticResource ResultPageViewModelSampleDataSampleDataSource}}" >
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top"/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
    </ItemsControl>
</UserControl>
