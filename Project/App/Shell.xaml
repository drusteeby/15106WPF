<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mcmControls="clr-namespace:MCM.Controls;assembly=MCM"
    xmlns:prism="http://prismlibrary.com/"
    x:Class="Tecmosa.Shell"
    Title="ExampleApplication" 
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen"
    >
    <Grid Name="mainGrid" Height="1024">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <WindowsFormsHost Width="1280">
            <mcmControls:MainScreen x:Name="mainScreen"
                                    TopLevel="False"
                                    />
        </WindowsFormsHost>
        <ContentControl prism:RegionManager.RegionName="MainRegion" HorizontalContentAlignment="Stretch" Grid.Row="1"/>



        
    </Grid>
</Window>
